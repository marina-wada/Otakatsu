<div class="container">
  <div class="row">
    <h6 class="mt-sm-5">新着グッズ</h6>
  </div>

  <div class="row">
    <% @items.each do |item| %>
      <div class="col-sm-3">
        <%= link_to item_path(item) do %>
          <%= attachment_image_tag item, :image, format: 'jpeg', size: "100x100" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>