<div class="container main mt-5">
  <div class="row">
    <%= render partial: 'layouts/flash' %>
  </div>
  <div class ="row">
    <div class="otakatsu-top text-center cover-text col-sm-10 col-md-8 mt-3"></div>
  </div>
  <div class="row">
    <div class="lead fukidashi mt-sm-5 col-xs-3 col-sm-4 col-md-3 col-lg-3">新着グッズ</div>
  </div>

  <div class="row">
    <% @items.each do |item| %>
      <div class="col-sm-3 mt-sm-3">
        <%= link_to item_path(item) do %>
          <%= attachment_image_tag item, :item_image, format: 'jpeg', size: "200x200" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>