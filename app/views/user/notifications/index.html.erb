<div class="container">
  <div class="row">
    <div class="lead mt-5">通知</div>
  </div>
  
  <div class="row">
    <div class="col text-left">
      <%= link_to destroy_all_users_notifications_path, class: "link", method: :delete do %>
        <i class="fas fa-trash" style="color: black;"></i>
        <h7>全削除</h7>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <% if @notifications.exists? %>
      <div class="users-index">
        <%= render @notifications %>
      </div>
    <% else %>
      <P>通知はありません</P>
    <% end %>
  </div>
</div>