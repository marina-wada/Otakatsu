    <div class="col-xs-4 col-sm-4 col-md-6 text-sm-left mt-3">
      <%= link_to "退会する", withdrawl_users_path, class: "btn btn-danger btn-sm", method: :patch, data: { confirm: "【確認】アカウント情報を削除してよろしいでしょうか？" } %>
    </div>
  </div>
