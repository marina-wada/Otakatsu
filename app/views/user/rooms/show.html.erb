<div class="container">
  <div class="row">
    <div class="lead mt-5 fukidashi">メッセージ</div>
  </div>
  <div class="row">
    <% @entries.each do |e| %>
  <div class="user-name">
  <strong>
    <p class="mr-2"><%= e.user.nickname %>さん</p>
  </strong>
  </div>
<% end %>
  </div>
  <div class="row mt-5">
    <div class="chat ">
      <% if @messages.present? %>
        <% @messages.each do |m| %>
          <div class="chat-box">
            <div class="chat-hukidashi mb-1"> <strong><%= m.user.nickname %>：<%= m.message %></strong> <br>
              <%= m.created_at.strftime("%Y-%m-%d %H:%M")%>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <%= form_with model: @message, local: true do |f| %>
    <div class="row mt-3">
      <div class="col-sm-12 col-md-8 col-lg-6 mb-2">
        <%= f.text_field :message, placeholder: "メッセージをご入力ください", size: 50, class: "form-text-field" %>
      </div>
      <div class="col-sm-12 col-md-4 col-lg-4">
        <%= f.hidden_field :room_id, value: @room.id %>
        <%= f.submit "送信", class: "btn btn-success btn-sm" %>
      </div>
    </div>
  <% end %>
</div>