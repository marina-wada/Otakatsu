<div class="container">
  <div class="row">
    <div class="mt-2">
      <%= render partial: 'layouts/flash' %>
    </div>
  </div>

  <div class="row">
    <div class="lead mt-sm-5 ml-sm-2 fukidashi">出品</div>
  </div>

  <div class="row mt-sm-5">
    <div class="col-xs-8 col-sm-8 col-md-6">
      <div class="row">
        <h6>登録済作品・イベントに追加</h6>
      </div>
      <% @genres.each do |genre|%>
        <div class="row mt-sm-2">
          <div class="col-xs-4 col-sm-5 col-md-3">
            <%= link_to genre.name, new_item_path(genre.id), class: "link" %>
          </div>
          <div class="col-xs-3 col-sm-3 col-md-3">
            <%= link_to "編集", edit_genre_path(genre.id), class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      <% end %>
    </div>

    <%= form_with model:@genre, url: genres_path, local:true do |f| %>
      <div class="col-xs-9 col-sm-9 col-md-6 mt-sm-0 mt-md-0 ml-sm-3">
        <div class="form-group row">
          <%= f.label :作品・イベント名新規追加, class: "col-form-label" %>
          <div class="col-xs-12 col-sm-12">
            <%= f.text_field :name, class: "form-control", size: 30 %>
          </div>
        </div>
        <div class="col-sm-3">
          <%= f.submit "追加", class: "btn btn-success btn-sm" %>
        </div>
      </div>
    <% end %>


  </div>
</div>