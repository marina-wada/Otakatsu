<div class="container">
  <div class="row">
    <% if @genre.errors.any? %>
      <%= @genre.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
  </div>

  <div class="row">
    <div class="lead mt-sm-5 ml-sm-2">出品</div>
  </div>

  <div class="row mt-sm-5">
    <div class="col-xs-8 col-sm-8 col-md-3">
      <h6>登録済作品・イベントに追加</h6>
      <% @genres.each do |genre|%>
        <div class="mt-sm-3">
          <%= link_to genre.name, new_item_path(genre.id), class: "link" %>
        </div>
      <% end %>
      <div class="col mt-sm-3">
        <%= link_to "編集", edit_genre_path(current_user), class: "btn btn-primary btn-sm" %>
      </div>
    </div>

    <%= form_with model:@genre, url: genres_path, local:true do |f| %>
      <div class="col-xs-9 col-sm-9 col-md-9 mt-xs-3 mt-md-0 ml-sm-3">
        <div class="row">
          <%= f.label :作品・イベント名新規追加 %>
        </div>
        <div class="row mt-xs-2">
          <%= f.text_field :name, size: 30 %>
        </div>
        <div class="row mt-sm-2 text-right">
          <%= f.submit "追加", class: "btn btn-success btn-sm" %>
        </div>
      </div>
    <% end %>


  </div>
</div>