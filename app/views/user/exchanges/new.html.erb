<div class="container">
  <div class="row">
    <div class="col-xs-8 col-sm-9 col-md-4 text-md-center mt-xs-5 mt-sm-5">
      <%= attachment_image_tag @item, :image, format: 'jpeg', size: "250x250" %>
    </div>

    <div class="col">
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-8 mt-sm-2 mt-md-5">
          <div>
            <%= @item.genre.name %>
          </div>
          <div>
            <%= @item.character %>
          </div>
          <div>
            <%= @item.kind %>
          </div>
          <div>
            <%= @item.introduction %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-8 col-md-6 mt-sm-2">
          <p class="border border-danger">
            <%= @item.user.nickname %>さんに交換を申し込みますか？<br>
            申し込む場合は交換対象のグッズを選択し、<br>
            写真を添付してください。
          </p>
        </div>
      </div>
      <%= form_with model: @exchange, url: exchanges_path, local: true do |f| %>
        <div class="col-xs-12 col-sm-12 col-md-12 mt-md-3">
          <span><求めるグッズ></span><br>
          <%= f.radio_button :ask_item, 0, checked: true %><%= @item.ask_item1 %>
          <div>
            <% if @item.ask_item2.present? %>
              <%= f.radio_button :ask_item, 1 %><%= @item.ask_item2 %>
            <% end %>
          </div>
          <div>
            <% if @item.ask_item3.present? %>
              <%= f.radio_button :ask_item, 2 %><%= @item.ask_item3 %>
            <% end %>
          </div>
          <div>
            <% if @item.ask_item4.present? %>
              <%= f.radio_button :ask_item, 3 %><%= @item.ask_item4 %>
            <% end %>
          </div>
          <div>
            <% if @item.ask_item5.present? %>
              <%= f.radio_button :ask_item, 4 %><%= @item.ask_item5 %>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-9 col-sm-9 col-md-9 mt-2">
            <%= f.attachment_field :image %>
          </div>
          <div class="col-xs-9 col-sm-9 col-md-9 mt-3">
            <%= f.hidden_field :item_id, value: @item.id %>
            <%= f.submit '交換を申し込む', class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>