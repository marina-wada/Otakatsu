<div class="container mt-5 main">
  <div class="row mt-5">
    <div class="lead">
      <% unless params[:keyword].blank? %>
        検索結果"<%= params[:keyword] %>"
      <% else %>
        All Item
      <% end %>
      </div>
  </div>

  <% if @items.count > 0 %>
    <div class="row mt-5">
      <% @items.each do |item| %>
        <div class="col-md-3">
          <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag item, :item_image, format: 'jpeg', class: 'search-result-img', size: "200x200" %>
            <p>
              <%= item.introduction %>
            </p>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="mt-2">Nothing...<i class="far fa-sad-tear fa-lg"></i></p>
  <% end %>
</div>