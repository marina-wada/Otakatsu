<div class="container">
  <div class="row">
    <%= render partial: 'layouts/flash' %>
  </div>
  <div class="row">
    <div class="lead mt-sm-5 fukidashi">出品一覧</div>
  </div>
  <div class="row mt-sm-5">
    <% @items.each do |item| %>
      <div class="col-xs-9 col-sm-6 col-md-3">
        <%= item.genre.name %>
        <div class="col-xs-9 col-sm-6 col-md-3 mt-sm-2">
          <%= link_to item_path(item) do %>
            <%= attachment_image_tag item, :item_image, format: 'jpeg', size: "100x100" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>