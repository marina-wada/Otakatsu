<div class="container">
  <div class="row">
    <div class="lead mt-sm-5">出品一覧</div>
  </div>
  <div class="row mt-sm-5">
    <table class="table">
      <thead>
        <tr>
          <th>作品・イベント名</th>
          <th>グッズ画像</th>
          <th>キャラクター名</th>
          <th>種類</th>
          <th>説明</th>
        </tr>
      </thead>
      <% @items.each do |item| %>
        <tbody>
          <tr>
            <td><%= item.genre.name %></td>
            <td>
              <%= link_to item_path(item) do %>
                <%= attachment_image_tag item, :image, format: 'jpeg', size: "50x50" %>
              <% end %>
            </td>
            <td><%= item.character %></td>
            <td><%= item.kind %></td>
            <td><%= item.introduction %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>

</div>