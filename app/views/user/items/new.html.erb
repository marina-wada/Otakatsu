<div class="container">
  <div class="row mt-sm-5">
    <div class="lead"><%= @genre.name %>のグッズを譲る</div>
  </div>

  <div class="row mt-sm-5">
    <%= form_with model: @item, url: items_path, local:true do |f| %>
      <div class="row">
        <table class="table">
          <thead>
            <tr>
              <th>グッズ画像</th>
              <th>キャラクター名</th>
              <th>グッズ説明</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= f.file_field :images, multiple: true %></td>
              <td><%= f.text_field :name %></td>
              <td><%= f.text_area :introduction %></td>
              <td>
                <%= link_to_remove_association "#{icon 'fas', 'trash-alt'}".html_safe , f, class: 'js-item-remove-btn' %>
              </td>
            </tr>
            <tr>
              <td>
                <%= f.fields_for :items, local: true, id: 'js-item-field' do |f| %>
                  <%= render 'item_fields', f: log %>
                  .links{data: {count: staffs.count}}
                  <%= link_to_add_association "入力項目を追加", f, :logs, { class: 'js-add-item-field-btn' } %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>