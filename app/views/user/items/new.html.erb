<div class="container">
  <div class="row mt-sm-5">
    <div class="lead"><%= @genre.name %>のグッズを譲る</div>
  </div>

  <div class="row mt-sm-5">
    <%= form_with model: @item, url: items_path, local:true do |f| %>
      <div class="row">
        <table class="table">
          <thead>
            <tr>
              <th>グッズ画像</th>
              <th>キャラクター名</th>
              <th>種類</th>
              <th>説明</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= f.attachment_field :image %></td>
              <td><%= f.text_field :character %></td>
              <td><%= f.text_field :kind %></td>
              <td><%= f.text_area :introduction %></td>
            </tr>
          </tbody>
        </table>
        <table class=table "mt-sm-3">
          <thead>
            <tr>
              <th>求めるグッズ1</th>
              <th>求めるグッズ2</th>
              <th>求めるグッズ3</th>
              <th>求めるグッズ4</th>
              <th>求めるグッズ5</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= f.text_field :ask_item1 %></td>
              <td><%= f.text_field :ask_item2 %></td>
              <td><%= f.text_field :ask_item3 %></td>
              <td><%= f.text_field :ask_item4 %></td>
              <td><%= f.text_field :ask_item5 %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="action">
        <%= f.hidden_field :genre_id, :value => @genre.id %>
        <%= f.submit "出品", class: "btn btn-primary btn-sm" %>
      </div>
    <% end %>
  </div>
</div>