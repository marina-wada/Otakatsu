<div class="container">
  <div class="row mt-sm-5">
    <div class="lead"><%= @genre.name %>のグッズを譲る</div>
  </div>

  <div class="row mt-sm-5">
    <%= form_with model: @item, url: items_path, local:true do |f| %>
      <div class="col-sm-6">
        <div class="form-group row">
          <%= f.label :グッズ画像, class: "col-form-label col-form-label-sm" %>
          <%= f.attachment_field :image, class: "attachment-control" %>
        </div>

        <div class="form-group row">
          <%= f.label :キャラクター名, class: "col-form-label col-form-label-sm" %>
          <%=f.text_field :character, class: "form-control form-control-sm" %>
        </div>

        <div class="form-group row">
          <%= f.label :グッズ種類, class: "col-form-label col-form-label-sm" %>
          <%=f.text_field :kind, class: "form-control form-control-sm" %>
        </div>

        <div class="form-group row">
          <%= f.label :グッズ説明, class: "col-form-label col-form-label-sm" %>
          <%=f.text_area :introduction, class: "form-control form-control-sm" %>
        </div>

        <%=f.hidden_field :genre_id,value:@genre.id %>

        <div class="form-group row">
          <%= f.label :求めるグッズ, class: "col-form-label col-form-label-sm" %><br>
          <%=f.text_field :ask_item, class: "form-control form-control-sm" %><br>
          <%= link_to "追加", new_item_path(@genre.id), class: "mt-sm-2 btn btn-success btn-sm form-control form-control-sm" %>
        </div>

        <% @items.each do |item| %>
          <div class="form-group row">
            <%= item.ask_item %>
              <div class="col-sm-5"><%= link_to "削除", new_item_path(@genre.id), class: "btn btn-success btn-sm form-control form-control-sm", method: :destroy %></div>
          </div>
        <% end %>

        <div class="form-group row mt-sm-2">
          <%= link_to "一覧に追加", new_item_path(@genre.id), class: "btn btn-success btn-sm form-control form-control-sm" %>
        </div>

        <div class="form-group row">
          <div class="actions">
            <%= f.submit "確定", class: "btn btn-success btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>

    <% @items.each do |item| %>
      <div class="col-sm-6 mt-sm-5">
        <div class="row">
          <div class="col-sm-2">
            <%= attachment_image_tag item, :image, format: 'jpeg', size: "50x50" %><br>
            <%= item.character %><br>
            <%= item.kind %><br>
            <%= item.introduction %><br>
            <%= item.ask_item %><br>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>