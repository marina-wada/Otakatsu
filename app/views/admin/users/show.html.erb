<div class="container">
  <div class="row mt-5">
    <div class="lead">ユーザー詳細</div>
  </div>

  <div class="row mt-3">
    <div class="col-md-10 ">
      <div class="row mb-3">
        <div class="col-md-2">お名前</div>
        <div class="col-md-6"><%= @user.name %></div>
      </div>
      <div class="row mb-3">
        <div class="col-md-2">ニックネーム</div>
        <div class="col-md-6"><%= @user.nickname %></div>
      </div>
      <div class="row mb-3">
        <div class="col-md-2">郵便番号</div>
        <div class="col-md-6"><%= @user.postal_code %></div>
      </div>
      <div class="row mb-3">
        <div class="col-md-2">住所</div>
        <div class="col-md-6"><%= @user.address %></div>
      </div>
      <div class="row mb-3">
        <div class="col-md-2">電話番号</div>
        <div class="col-md-6"><%= @user.telephone_number %></div>
      </div>
      <div class="row mb-3">
        <div class="col-md-2">メールアドレス</div>
        <div class="col-md-6"><%= @user.email %></div>
      </div>
      <div class="row mb-3">
        <div class="col-md-2">通報回数</div>
        <div class="col-md-6"><%= @user.reports.count %></div>
      </div>
      <div class="row mb-3">
        <div class="col-md-2">入会情報</div>
        <div class="col-md-6"><%= @user.is_active %></div>
      </div>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col-md-2">
      <%= link_to "出品一覧", admin_items_path(item_user_id: @user.id), class: "btn btn-success" %>
    </div>
    <div class="col-md-2">
      <%= link_to "交換一覧", admin_root_path(item_user_id: @user.id), class: "btn btn-primary" %>
    </div>
  </div>
</div>