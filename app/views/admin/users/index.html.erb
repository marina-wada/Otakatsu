<div class="container">
  <div class="row mt-5">
    <div class="laed">ユーザー一覧</div>
  </div>

  <div class="row mt-5">
    <table class="table">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to admin_user_path(user) do %>
              <%= user.id %>
            <% end %>
          </td>
          <td><%= user.name %></td>
          <td><%= user.is_active %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>