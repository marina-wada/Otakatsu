<div class="container">
  <div class="row">
    <div class="lead">交換履歴</div>
  </div>

  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>日時</th>
          <th>ユーザー名</th>
          <th>操作履歴</th>
        </tr>
      </thead>
      <tbody>
        <% @exchanges.each do |exchange| %>
          <tr>
            <td><%= exchange.created_at.strftime('%Y/%m/%d %-H:%-M:%-S') %></td>
            <td>
              <%= exchange.exchanged_user.name %>
              <%= exchange.item_user.name %>
            </td>
            <td>
              <%= exchange.exchanged_status %>
              <%= exchange.item_status %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>


  </div>
</div>