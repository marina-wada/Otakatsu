<div class="container">
  <div class="row mt-5">
    <div class="lead"><%= @user.name %>様の出品一覧</div>
  </div>

  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>出品日</th>
          <th>画像</th>
          <th>グッズ情報</th>
          <th>通報回数</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= attachment_image_tag item, :item_image, format: 'jpeg', size: "100x100" %></td>
            <td>
              <%= item.genre.name %>
              <%= item.character %>
              <%= item.kind %>
              <%= item.introduction %>
              <%= @item.ask_item1 %>
              <% if @item.ask_item2.present? %>
                <%= @item.ask_item2 %>
              <% end %>
              <% if @item.ask_item3.present? %>
                <%= @item.ask_item3 %>
              <% end %>
              <% if @item.ask_item4.present? %>
                <%= @item.ask_item4 %>
              <% end %>
              <% if @item.ask_item5.present? %>
                <%= @item.ask_item5 %>
              <% end %>
            </td>
            <td><%= item.report.amount %></td>
            <td><%= item.status %></td>
          </tr>
      </tbody>
    </table>
  </div>
</div>