<div class="container">
  <div class="row">
    <span class="lead">新規会員登録</span>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="form-group row">
      <%= f.label :名前, class: "col-form-label-sm" %>
      <div class="col-sm-10">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-sm-3 form-control form-control-sm" %>
      </div>
    </div>

    <div class="form-grop row">
      <%= f.label :ニックネーム, class: "col-form-label-sm" %>
      <div class="col-sm-10">
        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "col-sm-3 form-control form-control-sm" %>
      </div>
    </div>

    <div class="form-grop row">
      <%= f.label :郵便番号（ハイフン不要）, class: "col-form-label-sm" %>
      <div class="col-sm-10">
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "col-sm-3 form-control form-control-sm" %>
      </div>
    </div>

    <div class="form-grop row">
      <%= f.label :住所, class: "col-form-label-sm" %>
      <div class="col-sm-10">
        <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "col-sm-5 form-control form-control-sm" %>
        ※アパート・マンションにお住まいの場合は部屋番号の記入もお願いします。
      </div>
    </div>

    <div class="form-grop row">
      <%= f.label :電話番号（ハイフン不要）, class: "col-form-label-sm" %>
      <div class="col-sm-10">
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "col-sm-3 form-control form-control-sm" %>
      </div>
    </div>

    <div class="form-grop row">
      <%= f.label :メールアドレス, class: "col-form-label-sm" %>
      <div class="col-sm-10">
        <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "col-sm-5 form-control form-control-sm" %>
      </div>
    </div>

    <div class="form-grop row">
      <%= f.label :パスワード, class: "col-form-label-sm" %>
      <div class="col-sm-10">
        <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-5 form-control form-control-sm" %>
      </div>
    </div>

    <div class="form-grop row">
      <%= f.label :パスワード（確認）, class: "col-form-label-sm" %>
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-5 form-control form-control-sm" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class: "col-sm-2 form-control form-control-sm btn btn-success btn-sm" %>
    </div>

  <% end %>
</div>