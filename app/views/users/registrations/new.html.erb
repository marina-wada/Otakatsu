<div class="container mt-5 main">
  <div class="row">
    <span class="lead mt-sm-5">新規会員登録</span>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="form-group row mt-sm-5">
      <%= f.label :名前, class: "col-sm-4 col-form-label" %>
      <div class="col-sm-3">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control form-control-sm" %>
      </div>
    </div>

    <div class="form-grop row mt-sm-3">
      <%= f.label :ニックネーム, class: "col-sm-4 col-form-label" %>
      <div class="col-sm-3">
        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "form-control form-control-sm" %>
      </div>
    </div>

    <div class="form-grop row mt-sm-3">
      <%= f.label :電話番号, class: "col-sm-4 col-form-label" %>
      <div class="col-sm-3">
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "form-control form-control-sm" %>
        ※ハイフンなし
      </div>
    </div>

    <div class="form-grop row">
      <%= f.label :郵便番号, class: "col-sm-4 col-form-label" %>
      <div class="col-sm-3">
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control form-control-sm" %>
        ※ハイフンなし
      </div>
    </div>

    <div class="form-grop row">
      <%= f.label :住所, class: "col-sm-4 col-form-label" %>
      <div class="col-sm-7">
        <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control form-control-sm" %>
        ※アパート・マンションにお住まいの場合は部屋番号の記入もお願いします。
      </div>
    </div>

    <div class="form-grop row">
      <%= f.label :メールアドレス, class: "col-sm-4 col-form-label" %>
      <div class="col-sm-7">
        <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm" %>
      </div>
    </div>

    <div class="form-grop row mt-sm-3">
      <%= f.label :パスワード, class: "col-sm-4 col-form-label" %>
      <div class="col-sm-7">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm" %>
      </div>
    </div>

    <div class="form-grop row mt-sm-3">
      <%= f.label :パスワード（確認）, class: "col-sm-4 col-form-label" %>
      <div class="col-sm-7">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm" %>
      </div>
    </div>

    <div class="actions mt-sm-3 text-right">
      <%= f.hidden_field :is_active, :value => '有効'%>
      <%= f.submit "新規登録", class: "col-sm-1 form-control form-control-sm btn btn-success btn-sm" %>
    </div>

  <% end %>

</div>